        \mbox{%
                \m@th\ifx\f@series\@bseries@id\boldmath\fi%\if b\xp\@car\f@series\@nil
                \LaTeX\kern-0.1em\raisebox{-.12em}{$2_{#1#2}$}%
        }%
}
