%*****************************************************************************************************************************************%
%************************************************************ `my-latex.sty' *************************************************************%
%*****************************************************************************************************************************************%
% top level package encapsulating the individual component packages, each focused on a specific aspect/application, providing access to these packages and
% their package options through this single 'parent' package; adding "\RequirePackage[option list]{my-latex}" to a LaTeX document loads the component
% packages and the options specified in the 'option list' are passed through to the relevant component package.
%*****************************************************************************************************************************************%
%************************************* Define provided package name and LaTeX/package dependencies ***************************************%
%*****************************************************************************************************************************************%
\ProvidesPackage{my-latex}
%*****************************************************************************************************************************************%
%****************************************** Package options and corresponding Boolean variables ******************************************%
%*****************************************************************************************************************************************%
%-----------------------------------------------------------------------------------------------------------------------------------------%
\def\reportname{report}
\def\articlename{article}
\newif\if@documentclass@report@\@documentclass@report@false
\newif\if@documentclass@article@\@documentclass@article@false
\newif\if@documentclass@option@crop@\@documentclass@option@crop@false
\newif\if@landscape@option@\@landscape@option@false
\newif\if@standaloneoff@option@\@standaloneoff@option@false
\newif\if@toc@option@\@toc@option@false
\newif\if@frontbackmatter@option@\@frontbackmatter@option@false
\newif\if@automake@option@\@automake@option@false
\newif\if@roman@backmatter@option@\@roman@backmatter@option@false
\newif\if@isorot@package@option@\@isorot@package@option@false
\newif\if@fbm@dotfill@option@\@fbm@dotfill@option@false
%\DeclareOption{landscape}{\@landscape@option@true\PassOptionsToClass{landscape}{article}}
\DeclareOption{report}{\@documentclass@report@true}
\DeclareOption{article}{\@documentclass@article@true}
\DeclareOption{crop}{\@documentclass@option@crop@true}
\DeclareOption{landscape}{\@landscape@option@true}
\DeclareOption{standaloneoff}{\@standaloneoff@option@true}
\DeclareOption{toc}{\@toc@option@true}
\DeclareOption{frontbackmatter}{\@frontbackmatter@option@true}
\DeclareOption{automake}{\@automake@option@true}
\DeclareOption{romanbackmatter}{\@roman@backmatter@option@true}
\DeclareOption{fbmdotfill}{\@fbm@dotfill@option@true}
\DeclareOption*{\PackageWarning{my-latex}{Unknown \CurrentOption}}
%*****************************************************************************************************************************************%
%***************************************************** Processing of package options *****************************************************%
%*****************************************************************************************************************************************%
\ProcessOptions\relax
%-----------------------------------------------------------------------------------------------------------------------------------------%
\if@landscape@option@
	\PassOptionsToClass{landscape}{article}
	\PassOptionsToClass{landscape}{report}
\fi
%-----------------------------------------------------------------------------------------------------------------------------------------%
\if@documentclass@option@crop@
	\PassOptionsToClass{crop}{article}
	\PassOptionsToClass{crop}{report}
\fi
%-----------------------------------------------------------------------------------------------------------------------------------------%
\if@documentclass@report@
	\documentclass[class=\reportname, crop=false]{standalone}
\fi
%-----------------------------------------------------------------------------------------------------------------------------------------%
\if@automake@option@
	\PassOptionsToPackage{automake}{my-glossaries}
\fi
%-----------------------------------------------------------------------------------------------------------------------------------------%
\if@fbm@dotfill@option@
	\newcommand*{\frontbackmatterhfill}{\nobreak,\,\space\dotfill\space\nobreak}%
\else
	\newcommand*{\frontbackmatterhfill}{\space}%
\fi
%-----------------------------------------------------------------------------------------------------------------------------------------%
%*****************************************************************************************************************************************%
%************************************************************** Package Body *************************************************************%
%*****************************************************************************************************************************************%
%-----------------------------------------------------------------------------------------------------------------------------------------%
%-----------------------------------------------------------------------------------------------------------------------------------------%
%-----------------------------------------------------------------------------------------------------------------------------------------%
\RequirePackage{my-imakeidx}				% options: xindy
\RequirePackage{my-packages}           	% Custom set of packages used in my-latex.sty development
\RequirePackage[acronym,symbols,toc]{my-glossaries}% other options: automake xindy/makeindex, section=chapter/(sub)section, nopostdot/main/nonumberlist if glossary defined in file
\RequirePackage[intoc]{my-nomencl}		% nomenclature/abbreviations list similar to acronms/glossary
\RequirePackage{my-colorsets}			% Custom colorset definitions loaded
\RequirePackage{my-colors}         		% Custom color definitions and mixed color variables
\RequirePackage{my-color-schemes}		% Definition (\colorlet}{<scheme name>Scheme-<property>) of sets of colors for text/background/fill/etc properties
\RequirePackage{my-definitions}           % Custom set of packages used in my-latex.sty development
\RequirePackage{my-styles}        		 % Custom color definitionStyle/naming and visual settings
\RequirePackage{my-polynom}			% \polylongdiv, \polyfactorize, \poly<add,sub,mul,div>, \polygcd, \polyset{vars={},delims={},style=A|...,stage=#,div=<sym>}
\RequirePackage{my-math}           		% Custom math characters/symbols, delimiters, operators, (e/x/g)defs, commands, and environments
\RequirePackage{my-fonts}          		% Custom assignment of fonts and math alphabets to established and new font names
\RequirePackage{frontbackmatter}		% Include front/back matter: Table of Contents, List of Tables/Figures, Index, Glossary, List of Acronyms/Abbreviations, etc.
\RequirePackage{my-macros}
\RequirePackage{my-lstautogobble}		% Modified 'lstautogobble' package to determine listings' 'autogobble' value automatically instead of manually
\RequirePackage{my-listings} 			% Adapted  'listings' listing/caption appearance of code segments written in different programming language
%\RequirePackage{my-minted} 			% Adapted 'minted' package listing/caption appearance of code segments written in different programming language
%-----------------------------------------------------------------------------------------------------------------------------------------%
%*****************************************************************************************************************************************%
%******************************************** End of 'my-latex.sty' top level parent package *********************************************%
%*****************************************************************************************************************************************%
\catcode`!=\active
\catcode`\!=\active
\endinput 