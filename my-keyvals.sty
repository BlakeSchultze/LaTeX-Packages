                                {%
                                        \ifcommandkey{thickness}{\setlength{\@ul@thickness}{\commandkey{thickness}}}{}%
                                        \ifcommandkey{depth}{\setlength{\@ul@sep}{\commandkey{depth}}}{}%
                                        \ifcommandkey{color}{\setulcolor{\commandkey{color}}}{}%
                                        \setul{\@ul@sep}{\@ul@thickness}%
                                }%
                                {underline}{}%
                        }%
                }%
        }%
        %\endgroup
