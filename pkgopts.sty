\newcommand\QueryEnvVarList[2]%
{%
	\edef\envvar@OS{#1}%
        \edef\envvar@type{#2}%
	\edef\envvar@list{\csuse{#2envvar@#1list}}%
        \edef\envvar@list{\csuse{#2envvar@winlist}}%
        \def\envvar@prefix{\csuse{#2envvar@prefix}}%
        \foreach \envvar in \envvar@list%
	{%
		\getenv[\stdout]{\envvar}%
		\xp\xdef\csname\envvar@prefix @\envvar\endcsname{\stdout}%
	}%
}
