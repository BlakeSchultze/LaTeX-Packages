\DeclareDocumentCommand{\colortableentry}{m D<>{\labelboxwidth} D<>{\colorboxwidth} D<>{\colorboxheight}}
{%
	\colortablebox{white}{#2}{#4}{#1}%
	\colortablebox{#1}{#3}{#4}{}\unskip\ignorespaces%
}
