\def\@part[#1]#2%
{%
        \ifnum \c@secnumdepth >-2\relax
                %\steplinkedcounter{Part}{part}
                \stepsectioncounter{Part}
        \fi
        \cftPart@contentsline{#1}
        \markboth{}{}%
        {%
