                \ifnum \c@secnumdepth >-2\relax
                        \vskip0.35\textheight\HUGE\bfseries \partname\nobreakspace\thepart
                        \par
                        \vskip 20\p@
                \fi
                \Huge \bfseries #2\par%
        }%
        \@endpart%
