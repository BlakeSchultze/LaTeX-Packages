\DeclareDocumentCommand{\formattheequation}{s m o}
{%\formattheequation{<LHS>}{<RHS>}[</tcb/.style>]
        \IfStrEqCase{#2}%
        {%
                {equation}{\renewcommand{\theequation}{\arabic{equation}}}%
                {problems}{\renewcommand{\theequation}{\the@prob@counter-\arabic{equation}}}%
                {sections}{\renewcommand{\theequation}{\thesection.\arabic{equation}}}%
                %{chapters}{\renewcommand{\theequation}{\thechapter.\thesection.\arabic{equation}}}%
        }%
        []%
        \IfValueTF{#3}{\renewcommand{\theequation}{#3}}{}
}%
